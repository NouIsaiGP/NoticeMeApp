<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Registro">
    <TextView
        android:id="@+id/textVie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registro de usuario nuevo"
        android:textColor="@color/cardview_light_background"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="80dp"/>
    <TextView
        android:id="@+id/textViee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Llene el formulario y de click en 'Registrarse'"
        android:textColor="@color/cardview_light_background"
        android:textSize="12dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Correo"
        android:textColor="@color/cardview_light_background"
        android:textSize="20dp"
        android:layout_marginTop="80dp"/>

    <EditText
        android:id="@+id/txtCorreoR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/BLANCO"
        android:hint="Ejemplo@Gmail.com"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ContraseÃ±a"
        android:textColor="@color/cardview_light_background"
        android:textSize="20dp"
        android:layout_marginTop="40dp"/>

    <EditText
        android:id="@+id/txtPasswordR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:textColorHint="@color/BLANCO"
        android:hint="*******"
        android:layout_marginTop="15dp"
        />

    <Button
        android:id="@+id/btnRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrarte"
        android:layout_marginTop="40dp"/>
</LinearLayout>